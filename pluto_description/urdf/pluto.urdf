<?xml version="1.0"?>

  <robot name="pluto">
    <!--Materials-->
    <material name="blue">
      <color rgba="0 0 0.8 1"/>
    </material>
    <material name="orange">
      <color rgba="0.8 0.4 0.0 1"/>
    </material>
    <material name="black">
      <color rgba="0 0 0 1"/>
    </material>
    <material name="white">
      <color rgba="1 1 1 1"/>
    </material>

    <link name="base_link">
      <visual>
        <geometry>
          <cylinder length="0.012" radius="0.25"/>
      	</geometry>
        <material name="orange"/>
      </visual>
      <collision>
        <geometry>
          <cylinder length="0.012" radius="0.25"/>
        </geometry>
      </collision>
    </link>

    <joint name="base_to_left_wheel" type="continuous">
      <parent link="base_link"/>
      <child link="left_wheel"/>
      <origin xyz="0 0.188 -0.04" rpy="1.57 0 0" />
      <axis xyz="0 0 1" />
    </joint>

    <joint name="base_to_right_wheel" type="continuous">
      <parent link="base_link"/>
      <child link="right_wheel"/>
      <origin xyz="0 -0.188 -0.04" rpy="1.57 0 0" />
      <axis xyz="0 0 1" />
    </joint>

    <link name="left_wheel">
      <visual>        
        <geometry>
          <cylinder length="0.024" radius="0.04"/>
        </geometry>
        <material name="black"/>
      </visual>
    </link>

    <link name="right_wheel">
      <visual>        
        <geometry>
          <cylinder length="0.024" radius="0.04"/>
        </geometry>
        <material name="black"/>
      </visual>
    </link>

  </robot>

